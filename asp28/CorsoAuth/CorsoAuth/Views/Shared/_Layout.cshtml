
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        @Html.ActionLink("Home", "Index", "Home")

        <br />
        @if (Request.IsAuthenticated)
        {
            <strong>@Html.Encode(User.Identity.Name)</strong><br />
            @Html.ActionLink("Disconnetti", "Logout", "Utente")<br />
        }
        else
        {
            @Html.ActionLink("Accedi", "Login", "Utente")<br />
            @Html.ActionLink("Registrazione", "Registrazione", "Utente")<br />
        }        
    </div>
    @RenderBody()
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</body>
</html>
